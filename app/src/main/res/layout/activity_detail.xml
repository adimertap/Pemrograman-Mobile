<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".phonebook.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/p" ></ImageView>

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:paddingVertical="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="I Putu Adi Merta Pratama"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/tv_nohp"
            android:text="083117270179"
            android:gravity="center"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jalan Anyelir Bongan Kauh Tabanan"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="18dp"
            android:id="@+id/tv_alamat"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_hubungan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Diri Sendiri"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Ubah"
            android:id="@+id/tv_ubah"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Hapus"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/tv_hapus"
            android:layout_width="1dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Tambah"
            android:gravity="center"
            android:id="@+id/tv_tambah"
            android:textSize="20dp"/>


    </LinearLayout>

</RelativeLayout>